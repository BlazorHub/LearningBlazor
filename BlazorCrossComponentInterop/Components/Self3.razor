@code {
    /// <summary>
    /// Name参数必须与Name带有CascadingValue组件的属性匹配，如果我们没有提到任何Name，则CascadingParameter中的变量类型与CascadingValue中的Value属性匹配。
    /// </summary>
    [CascadingParameter(Name = "GrandValue")]
    string GrandValue { get; set; }
}